{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "lib": [
      "es5", "es6", "esnext",
      "webworker",
    ],
    "strict": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "CONFIG/*": ["src/config/*"],
      "CORE/*": ["src/core/*"],
      "ROOT/*": ["src/*"],
      "RUNTIME*": ["src/runtime/index.ts"],
      "SRC/*": ["src/lib/*"],
      "TYPES/*": ["types/*"],
      "UTIL/*": ["src/util/*"],
    } ,
    "typeRoots": [
      "./node_modules/@types",
    ],
    "types": [
      "node",
      "jest",
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
}
